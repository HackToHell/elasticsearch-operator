{
  "apiVersion": "enterprises.upmc.com/v1",
  "kind": "ElasticsearchCluster",
  "metadata": {
    "name": "prod-elastic"
  },
  "spec": {
    "client-node-replicas": 3,
    "master-node-replicas": 3,
    "data-node-replicas": 4,
    "network-host": "0.0.0.0",
    "zones": ["asia-northeast1-a"],
    "data-volume-size": "100Gi",
    "master-java-options": "-Xms512m -Xmx512m",
    "data-java-options" : "-Xms4g -Xmx4g",
    "snapshot": {
      "scheduler-enabled": false,
      "bucket-name": "elasticsnapshots99",
      "cron-schedule": "@every 2m"
    },
    "storage": {
      "type": "pd-ssd",
      "storage-class-provisioner": "kubernetes.io/gce-pd"
    },
    "nodePort": 30303,
    "serviceaccount" : "system:serviceaccount:elastic-search:es-cluster",
    "master-node-resources": {
      "requests": {
         "memory": "1Gi",
         "cpu": "200m"
      },
      "limits": {
        "memory": "1Gi",
        "cpu": "200m"
      }
    },
    "data-node-resources": {
      "requests": {
        "memory": "6Gi",
        "cpu": "2"
      },
      "limits": {
        "memory": "6Gi",
        "cpu": "2"
      }
    }
  }
}
